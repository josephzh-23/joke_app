<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.Get_Joke_Fragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/get_joke_text"
        android:layout_width="91dp"
        android:layout_height="75dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:text="@string/hello_blank_fragment"
        app:layout_constraintStart_toEndOf="@+id/jokeImage"
        app:layout_constraintTop_toBottomOf="@+id/btn_get_joke" />

    <Button
        android:id="@+id/btn_get_joke"
        android:layout_width="122dp"
        android:layout_height="41dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="48dp"
        android:text="Get text joke"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btn_save_joke"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="172dp"
        android:text="Save joke to database"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_get_joke" />

    <com.facebook.login.widget.LoginButton
        android:id="@+id/login_button"
        android:layout_width="182dp"
        android:layout_height="29dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="4dp"
        android:layout_marginTop="116dp"
        app:layout_constraintStart_toEndOf="@+id/get_joke_text"
        app:layout_constraintTop_toBottomOf="@+id/btn_get_joke" />

    <TextView
        android:id="@+id/nameField"
        android:layout_width="92dp"
        android:layout_height="41dp"
        android:layout_marginTop="88dp"
        android:layout_marginEnd="16dp"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="@+id/btn_save_joke"
        app:layout_constraintTop_toBottomOf="@+id/btn_save_joke" />

    <ImageView
        android:id="@+id/profilePic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="44dp"
        app:layout_constraintEnd_toStartOf="@+id/nameField"
        app:layout_constraintTop_toTopOf="@+id/nameField"
        tools:src="@tools:sample/avatars" />

    <com.facebook.share.widget.ShareButton
        android:id="@+id/shareButton"
        android:layout_width="221dp"
        android:layout_height="34dp"
        android:layout_marginStart="68dp"
        android:layout_marginTop="192dp"
        android:text="Share joke"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_button" />

    <ImageView
        android:id="@+id/jokeImage"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        app:layout_constraintBottom_toBottomOf="@+id/get_joke_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/get_joke_text"
        app:layout_constraintVertical_bias="0.471"
        tools:src="@drawable/funny" />
</androidx.constraintlayout.widget.ConstraintLayout>